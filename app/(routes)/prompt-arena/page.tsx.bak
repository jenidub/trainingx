import { useLocation } from "wouter";
import {
  Sparkles,
  Flame,
  Zap,
  Repeat,
  Trophy,
  Play,
  History,
  Brain,
  ThumbsDown,
  ThumbsUp,
  Activity,
} from "lucide-react";

import { SidebarLayout } from "@/components/SidebarLayout";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Progress } from "@/components/ui/progress";
import { promptArenaDeck } from "@/data/prompt-arena-deck";
import { useAuth } from "@/contexts/AuthContextProvider";

type Rating = "bad" | "almost" | "good";

const ratingMeta: Record<
  Rating,
  { label: string; color: string; detail: string; xp: number; icon: typeof ThumbsDown }
> = {
  bad: {
    label: "Needs More Juice",
    color: "bg-red-100 border-red-200 text-red-700",
    detail: "Mark the miss, grab insight, and reroll.",
    xp: 8,
    icon: ThumbsDown,
  },
  almost: {
    label: "Almost There",
    color: "bg-amber-100 border-amber-200 text-amber-700",
    detail: "You were close. Capture the tweak and bank XP.",
    xp: 18,
    icon: Activity,
  },
  good: {
    label: "Nailed It",
    color: "bg-emerald-100 border-emerald-200 text-emerald-700",
    detail: "Bank combo XP and keep the streak alive.",
    xp: 28,
    icon: ThumbsUp,
  },
};

const xpPerLevel = 160;

type RecentPrompt = {
  id: string;
  title: string;
  type: string;
  rating: Rating;
  xp: number;
};

export default function PromptArenaPage() {
  const { isAuthenticated, isLoading: authLoading } = useAuth();
  const [, setLocation] = useLocation();

  useEffect(() => {
    if (!authLoading && !isAuthenticated) {
      sessionStorage.setItem("redirectAfterLogin", "/prompt-arena");
      setLocation("/auth");
    }
  }, [authLoading, isAuthenticated, setLocation]);

  const deck = useMemo(
    () => [...promptArenaDeck].sort(() => Math.random() - 0.5),
    []
  );

  const [currentIndex, setCurrentIndex] = useState(0);
  const [isRevealed, setIsRevealed] = useState(false);
  const [isApplyingPrompt, setIsApplyingPrompt] = useState(false);
  const [promptResult, setPromptResult] = useState<string | null>(null);
  const [lastRating, setLastRating] = useState<Rating | null>(null);

  const [stats, setStats] = useState({
    xp: 80,
    level: 1,
    streak: 0,
    cardsPlayed: 0,
  });

  const [skillProgress, setSkillProgress] = useState<Record<string, number>>(() =>
    promptArenaDeck.reduce<Record<string, number>>((acc, card) => {
      card.skills.forEach((skill) => {
        acc[skill] = 0;
      });
      return acc;
    }, {})
  );

  const [recentPrompts, setRecentPrompts] = useState<RecentPrompt[]>([]);

  const currentCard = deck[currentIndex];
  const arenaProgress = ((stats.cardsPlayed % deck.length) / deck.length) * 100;
  const nextLevelProgress = (stats.xp % xpPerLevel) / xpPerLevel * 100;
  const topSkills = Object.entries(skillProgress)
    .sort(([, a], [, b]) => b - a)
    .slice(0, 4);
  const lastRatingMeta = lastRating ? ratingMeta[lastRating] : null;
  const LastRatingIcon = lastRatingMeta?.icon;
  const displayCardNumber = stats.cardsPlayed + (isRevealed ? 0 : 1);
  const nextLevelXp = xpPerLevel - (stats.xp % xpPerLevel);
  const runsToLoot = stats.streak % 3 === 0 ? 3 : 3 - (stats.streak % 3);
  const lootReady = stats.streak >= 3;
  const heroTiles = [
    {
      label: "Season XP",
      value: `${stats.xp} XP`,
      detail: `${nextLevelXp} XP to Level ${stats.level + 1}`,
    },
    {
      label: "Combo Multiplier",
      value: `x${Math.max(stats.streak || 1, 1)}`,
      detail:
        stats.streak >= 3
          ? "Mini-boss deck primed"
          : `${runsToLoot} good runs to loot`,
    },
    {
      label: "Deck Cycle",
      value: `${displayCardNumber}/${deck.length}`,
      detail: `Cycle ${Math.floor(stats.cardsPlayed / deck.length) + 1}`,
    },
  ];

  if (authLoading) {
    return (
      <SidebarLayout>
        <div className="flex h-full items-center justify-center">
          <div className="text-gray-500 text-sm">Charging the arena...</div>
        </div>
      </SidebarLayout>
    );
  }

  if (!isAuthenticated) {
    return null;
  }

  if (!currentCard) {
    return null;
  }

  const handleRate = (rating: Rating) => {
    const reward = ratingMeta[rating];
    setIsRevealed(true);
    setLastRating(rating);
    setStats((prev) => {
      const xp = prev.xp + reward.xp * currentCard.skills.length;
      const level = Math.floor(xp / xpPerLevel) + 1;
      return {
        xp,
        level,
        cardsPlayed: prev.cardsPlayed + 1,
        streak: rating === "bad" ? 0 : prev.streak + 1,
      };
    });

    setSkillProgress((prev) => {
      const updated = { ...prev };
      currentCard.skills.forEach((skill) => {
        updated[skill] = (updated[skill] || 0) + reward.xp;
      });
      return updated;
    });

    setRecentPrompts((prev) => {
      const next = [
        {
          id: currentCard.id,
          title: currentCard.title,
          type: currentCard.type,
          rating,
          xp: reward.xp * currentCard.skills.length,
        },
        ...prev,
      ];
      return next.slice(0, 4);
    });
  };

  const handleApplyPrompt = () => {
    setIsApplyingPrompt(true);
    setPromptResult(null);

    setTimeout(() => {
      setPromptResult(currentCard.applyPreview);
      setIsApplyingPrompt(false);
    }, 1000);
  };

  const handleNextCard = () => {
    setPromptResult(null);
    setIsApplyingPrompt(false);
    setIsRevealed(false);
    setLastRating(null);
    setCurrentIndex((prev) => (prev + 1) % deck.length);
  };

  return (
    <SidebarLayout>
      <div className="min-h-full bg-gradient-to-br from-slate-950 via-purple-950 to-slate-900 text-white relative overflow-hidden">

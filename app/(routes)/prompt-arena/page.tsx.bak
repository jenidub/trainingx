                    </div>
                  </div>

                  {/* Skills */}
                  <div className="grid gap-3">
                    {topSkills.map(([skill, xp], idx) => {
                      const skillPercent = Math.min(100, (xp / 150) * 100);
                      const colors = [
                        { border: "border-purple-500/30", bg: "from-purple-500/20 to-pink-500/20", bar: "from-purple-400 to-pink-400" },
                        { border: "border-orange-500/30", bg: "from-orange-500/20 to-red-500/20", bar: "from-orange-400 to-red-400" },
                        { border: "border-emerald-500/30", bg: "from-emerald-500/20 to-green-500/20", bar: "from-emerald-400 to-green-400" },
                        { border: "border-cyan-500/30", bg: "from-cyan-500/20 to-blue-500/20", bar: "from-cyan-400 to-blue-400" },
                      ];
                      const color = colors[idx % colors.length];
                      
                      return (
                        <motion.div
                          key={skill}
                          initial={{ opacity: 0, x: -20 }}
                          animate={{ opacity: 1, x: 0 }}
                          transition={{ delay: idx * 0.1 }}
                          className={`rounded-xl border-2 ${color.border} bg-gradient-to-br ${color.bg} px-4 py-3 backdrop-blur-sm`}
                        >
                          <div className="flex items-center justify-between mb-2">
                            <span className="text-white font-bold">{skill}</span>
                            <div className="flex items-center gap-2">
                              <Sparkles className="size-3 text-amber-400" />
                              <span className="text-xs text-white/80 font-bold">{xp} XP</span>
                            </div>
                          </div>
                          <div className="relative h-2 w-full bg-slate-800 rounded-full overflow-hidden">
                            <motion.div
                              className={`h-full bg-gradient-to-r ${color.bar}`}
                              initial={{ width: 0 }}
                              animate={{ width: `${skillPercent}%` }}
                              transition={{ duration: 0.5, delay: idx * 0.1 }}
                            />
                          </div>
                        </motion.div>
                      );
                    })}
                    {topSkills.length === 0 && (
                      <div className="text-center py-6">
                        <p className="text-cyan-300/60 text-sm">
                          üéØ Complete battles to unlock skills
                        </p>
                      </div>
                    )}
                  </div>
                </CardContent>
              </Card>

              {/* Battle History */}
              <Card className="border-2 border-pink-500/50 bg-gradient-to-br from-slate-900/90 to-pink-900/50 backdrop-blur-sm">
                <CardHeader className="border-b-2 border-pink-500/30 pb-4">
                  <CardTitle className="flex items-center gap-2 text-pink-300 font-black text-xl">
                    <History className="size-6 text-pink-400" />
                    Battle Log
                  </CardTitle>
                  <CardDescription className="text-pink-200/70">
                    Your recent combat history
                  </CardDescription>
                </CardHeader>
                <CardContent className="space-y-3 py-6">
                  {recentPrompts.length === 0 && (
                    <div className="text-center py-6">
                      <p className="text-pink-300/60 text-sm">
                        üìú Complete your first battle to start logging
                      </p>
                    </div>
                  )}
                  {recentPrompts.map((prompt, idx) => {
                    const rating = ratingMeta[prompt.rating];
                    const Icon = rating.icon;
                    const colors = {
                      bad: { border: "border-red-500/30", bg: "from-red-500/20 to-red-600/20" },
                      almost: { border: "border-amber-500/30", bg: "from-amber-500/20 to-orange-500/20" },
                      good: { border: "border-emerald-500/30", bg: "from-emerald-500/20 to-green-500/20" },
                    };
                    const color = colors[prompt.rating];
                    
                    return (
                      <motion.div
                        key={prompt.id + prompt.rating}
                        initial={{ opacity: 0, x: -20 }}
                        animate={{ opacity: 1, x: 0 }}
                        transition={{ delay: idx * 0.1 }}
                        className={`rounded-2xl border-2 ${color.border} bg-gradient-to-br ${color.bg} p-4 backdrop-blur-sm`}
                      >
                        <div className="flex items-center justify-between mb-2">
                          <Badge className="border border-purple-400/50 bg-purple-500/20 text-purple-300 backdrop-blur-sm text-xs">
                            {prompt.type}
                          </Badge>
                          <Badge className="border border-amber-400/50 bg-amber-500/20 text-amber-300 backdrop-blur-sm font-bold">
                            +{prompt.xp} XP
                          </Badge>
                        </div>
                        <p className="text-sm font-bold text-white mb-2">
                          {prompt.title}
                        </p>
                        <div
                          className={`inline-flex items-center gap-2 rounded-full border-2 px-3 py-1 text-xs font-bold backdrop-blur-sm ${rating.color}`}
                        >
                          <Icon className="size-3" />

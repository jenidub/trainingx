                    <p className="text-xs text-white/50 relative z-10">{tile.detail}</p>
                    
                    {/* Progress indicator for XP */}
                    {idx === 0 && (
                      <div className="mt-2 h-1 w-full bg-white/10 rounded-full overflow-hidden relative z-10">
                        <motion.div
                          className="h-full bg-gradient-to-r from-cyan-400 to-blue-400"
                          initial={{ width: 0 }}
                          animate={{ width: `${nextLevelProgress}%` }}
                          transition={{ duration: 0.5 }}
                        />
                      </div>
                    )}
                  </motion.div>
                );
              })}
            </div>

            {/* Status Badges */}
            <div className="flex flex-wrap gap-2">
              <Badge className="border-2 border-emerald-500/50 bg-emerald-500/20 text-emerald-300 backdrop-blur-sm px-3 py-1">
                <Zap className="mr-1 size-3" /> Skill Sync Active
              </Badge>
              <Badge className="border-2 border-purple-500/50 bg-purple-500/20 text-purple-300 backdrop-blur-sm px-3 py-1">
                Deck Loop {Math.floor(stats.cardsPlayed / deck.length) + 1}
              </Badge>
              {lootReady && (
                <motion.div
                  animate={{ scale: [1, 1.05, 1] }}
                  transition={{ duration: 1, repeat: Infinity }}
                >
                  <Badge className="border-2 border-yellow-400 bg-yellow-500 text-yellow-950 font-bold px-3 py-1">
                    <Trophy className="mr-1 size-3" /> LOOT READY!
